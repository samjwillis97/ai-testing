{
  "name": "@shc/cli",
  "version": "0.1.0",
  "description": "SHC Command Line Interface",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "shc": "dist/index.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "dev": "node --loader ts-node/esm --no-warnings src/index.ts",
    "typecheck": "tsc --noEmit",
    "prettier:fix": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prettier": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "setup-config": "node scripts/setup-config.js"
  },
  "dependencies": {
    "@shc/core": "workspace:*",
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "ora": "^8.0.1",
    "table": "^6.9.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "license": "MIT"
}
