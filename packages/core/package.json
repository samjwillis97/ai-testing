    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.57.1",
    "globals": "^16.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
