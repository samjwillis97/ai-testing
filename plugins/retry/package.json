{
  "name": "@shc/plugin-retry",
  "version": "1.0.0",
  "description": "Request retry plugin for Sam's HTTP Client",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc -p tests/tsconfig.json --noEmit"
  },
  "keywords": [
    "shc",
    "plugin",
    "retry",
    "http",
    "client"
  ],
  "author": "Sam Willis",
  "license": "MIT",
  "dependencies": {
    "@shc/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "workspace:*",
    "typescript": "workspace:*",
    "tsup": "workspace:*",
    "vitest": "workspace:*",
    "@typescript-eslint/eslint-plugin": "workspace:*",
    "@typescript-eslint/parser": "workspace:*",
    "eslint": "workspace:*",
    "@vitest/coverage-v8": "workspace:*"
  }
} 